@{
    // This is a partial view for displaying debug payment information
    // Only visible to administrators and developers
}

@if (Context.User.IsInRole("QuanTriVien") || Context.User.IsInRole("Admin"))
{
    <div class="card mt-4 mb-4">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center" id="debugHeader">
            <h5 class="mb-0">
                <i class="fas fa-bug me-2"></i> Th√¥ng tin Debug
            </h5>
            <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#debugCollapse" aria-expanded="false" aria-controls="debugCollapse">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>
        <div class="collapse" id="debugCollapse">
            <div class="card-body">
                <h5 class="card-title">VNPay Parameters</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Parameter</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var param in Context.Request.Query)
                            {
                                <tr>
                                    <td><code>@param.Key</code></td>
                                    <td><code>@param.Value</code></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <hr />
                
                <h5 class="card-title mt-3">ViewBag Values</h5>
                <div class="alert alert-info">
                    <p class="mb-0">
                        <small>Note: This section shows all ViewBag values added by the controller for this view.</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
