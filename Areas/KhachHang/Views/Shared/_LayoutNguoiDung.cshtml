<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nguoidung.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;600;700&family=Inter:wght@400;500&display=swap">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-top">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo-container text-decoration-none">
                <h1 class="logo-text">Panasonic</h1>
                <p class="logo-subtext">Trung tâm bảo hành</p>
            </a>

            <div class="search-container">
                <input type="text" class="search-input" placeholder="Tìm kiếm sản phẩm, dịch vụ...">
                <button class="search-button">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <div class="header-icons">
                <i class="bi bi-globe" title="Ngôn ngữ"></i>
                <i class="bi bi-geo-alt" title="Vị trí"></i>
                <i class="bi bi-facebook" title="Facebook"></i>
                <a href="/Account/Profile"><i class="bi bi-person-circle" title="Tài khoản"></i></a>
                
                @{
                    bool isAuthenticated = User.Identity?.IsAuthenticated ?? false;
                }

                @if (isAuthenticated && User.Identity != null)
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
                        <button type="submit" class="btn-login">Đăng xuất (@User.Identity.Name)</button>
                    </form>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn-login">Đăng nhập</a>
                }
            </div>
        </div>
        @{
            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        }
        <nav class="nav-menu">
            <ul>
                <li>
                    <a asp-area="KhachHang" asp-controller="Home" asp-action="Index" 
                       class="@(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                        <i class="bi bi-house-door me-1"></i>Trang chủ
                    </a>
                </li>
                <li>
                    <a asp-area="KhachHang" asp-controller="Home" asp-action="About"
                       class="@(currentController == "Home" && currentAction == "About" ? "active" : "")">
                        Giới thiệu
                    </a>
                </li>
                <li>
                    <a asp-area="KhachHang" asp-controller="PhieuSuaChua" asp-action="Create"
                       class="@(currentController == "PhieuSuaChua" && currentAction == "Create" ? "active" : "")">
                        Đăng ký dịch vụ
                    </a>
                </li>
                <li>
                    <a asp-area="KhachHang" asp-controller="DonSuaChua" asp-action="Index"
                       class="@(currentController == "DonSuaChua" && currentAction == "Index" ? "active" : "")">
                        Đơn sửa chữa
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <partial name="_Notification" />
</body>
</html>
