@model QuanLySuaChua_BaoHanh.Models.LinhKien

@{
    ViewData["Title"] = "Chi tiết linh kiện";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fs-1 fw-bold mb-0">Chi tiết linh kiện</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-cpu me-2"></i>Thông tin linh kiện</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="fw-bold">Mã linh kiện:</label>
                    <div>@Model.LinhKienId</div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Tên linh kiện:</label>
                    <div>@Model.TenLinhKien</div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Danh mục:</label>
                    <div>@(Model.DanhMuc?.TenDanhMuc ?? "Không có danh mục")</div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Số lượng tồn:</label>
                    <div>
                        @Model.SoLuongTon
                        @if (Model.SoLuongTon < 5)
                        {
                            <span class="badge bg-danger ms-2">Sắp hết</span>
                        }
                        else if (Model.SoLuongTon < 20)
                        {
                            <span class="badge bg-warning ms-2">Thấp</span>
                        }
                        else
                        {
                            <span class="badge bg-success ms-2">Đủ</span>
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Đơn giá:</label>
                    <div>@Model.DonGia.ToString("#,##0 VND")</div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Phạm vi sử dụng:</label>
                    <div>@(string.IsNullOrEmpty(Model.PhamViSuDung) ? "Không có" : Model.PhamViSuDung)</div>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Ghi chú:</label>
                    <div>@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Lịch sử sử dụng</h5>
            </div>
            <div class="card-body">
                @if (!Model.ChiTietSuaChuas.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i> Linh kiện này chưa được sử dụng trong đơn sửa chữa nào.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã phiếu</th>
                                    <th>Ngày sử dụng</th>
                                    <th>Số lượng</th>
                                    <th>Đánh giá kỹ thuật</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietSuaChuas.OrderByDescending(c => c.PhieuSuaChua.NgayGui))
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="PhieuSuaChua" asp-action="ChiTiet" asp-route-id="@item.PhieuSuaChuaId">
                                                @item.PhieuSuaChuaId
                                            </a>
                                        </td>
                                        <td>@item.PhieuSuaChua.NgayGui.ToString("dd/MM/yyyy")</td>
                                        <td>@item.SoLuongLinhKien</td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.DanhGiaKyThuat))
                                            {
                                                <span class="text-muted">Chưa có đánh giá</span>
                                            }
                                            else if (item.DanhGiaKyThuat.Length > 50)
                                            {
                                                @(item.DanhGiaKyThuat.Substring(0, 50) + "...")
                                            }
                                            else
                                            {
                                                @item.DanhGiaKyThuat
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = item.PhieuSuaChua.TrangThai switch
                                                {
                                                    "PENDING" => "status-pending",
                                                    "IN_PROGRESS" => "status-inprogress",
                                                    "COMPLETED" => "status-completed",
                                                    "CANCELLED" => "status-cancelled",
                                                    _ => "status-pending"
                                                };

                                                var statusText = item.PhieuSuaChua.TrangThai switch
                                                {
                                                    "PENDING" => "Chờ xử lý",
                                                    "IN_PROGRESS" => "Đang xử lý",
                                                    "COMPLETED" => "Hoàn thành",
                                                    "CANCELLED" => "Đã hủy",
                                                    _ => "Chờ xử lý"
                                                };
                                            }
                                            <span class="status-badge @statusClass">@statusText</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="mt-4">
                        <h6>Tổng số lần sử dụng: <span class="badge bg-primary">@Model.ChiTietSuaChuas.Count</span></h6>
                        <h6>Tổng số lượng đã sử dụng: <span class="badge bg-info">@Model.ChiTietSuaChuas.Sum(c => c.SoLuongLinhKien)</span></h6>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
