@model QuanLySuaChua_BaoHanh.Models.NguoiDung

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fs-1 fw-bold mb-0">Thông tin cá nhân</h2>
    <a asp-action="CapNhatThongTin" class="btn btn-primary">
        <i class="bi bi-pencil-square me-2"></i>Cập nhật thông tin
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="user-avatar mx-auto mb-3" style="width: 100px; height: 100px; font-size: 36px;">
                    @Model.HoTen?.FirstOrDefault().ToString().ToUpper()
                </div>
                <h5 class="fw-bold">@Model.HoTen</h5>
                <p class="text-muted">Kỹ thuật viên</p>

                <hr class="my-3">

                <div class="d-flex flex-column align-items-start">
                    <p class="mb-2">
                        <i class="bi bi-telephone me-2"></i>
                        @Model.PhoneNumber
                    </p>
                    <p class="mb-2">
                        <i class="bi bi-envelope me-2"></i>
                        @Model.Email
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-geo-alt me-2"></i>
                        @(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Thống kê công việc</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">Tổng số đơn đã xử lý</h6>
                            <h3 class="fw-bold">@ViewBag.Stats["TotalOrders"]</h3>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">Đơn đã hoàn thành</h6>
                            <h3 class="fw-bold text-success">@ViewBag.Stats["CompletedOrders"]</h3>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">Đơn đang xử lý</h6>
                            <h3 class="fw-bold text-warning">@ViewBag.Stats["InProgressOrders"]</h3>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">Tổng số linh kiện đã sử dụng</h6>
                            <h3 class="fw-bold text-primary">@ViewBag.Stats["TotalComponents"]</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Kỹ năng và chuyên môn</h5>
            </div>
            <div class="card-body">
                <p>Thông tin về kỹ năng và chuyên môn sẽ được cập nhật sau.</p>
                
                <!-- Placeholder for skills information -->
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> Liên hệ với quản trị viên để cập nhật thông tin chuyên môn và kỹ năng của bạn.
                </div>
            </div>
        </div>
    </div>
</div>
