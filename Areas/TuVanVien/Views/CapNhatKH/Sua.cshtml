@model QuanLySuaChua_BaoHanh.Models.NguoiDung
@{
    ViewData["Title"] = "Sửa thông tin khách hàng";
    Layout = "~/Areas/TuVanVien/Views/Shared/_LayoutTuVanVien.cshtml";
}

<h2>Sửa thông tin khách hàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tài khoản</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>SĐT</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phường ID</label>
        <input asp-for="PhuongId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Vai trò</label>
        <input asp-for="VaiTro" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary" onclick="return confirm('Bạn chắc chắn muốn cập nhật?')">Cập nhật</button>

    <a asp-action="Xoa" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xoá</a>
</form>
