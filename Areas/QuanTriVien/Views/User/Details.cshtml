@model QuanLySuaChua_BaoHanh.Models.NguoiDung
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết người dùng</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user mr-1"></i>
            Thông tin người dùng
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Mã người dùng:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Tên đăng nhập:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>

                        <dt class="col-sm-3">Họ tên:</dt>
                        <dd class="col-sm-9">@Model.HoTen</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Số điện thoại:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Địa chỉ:</dt>
                        <dd class="col-sm-9">
                            @if (ViewBag.DiaChi != null)
                            {
                                @ViewBag.DiaChi
                            }
                            else
                            {
                                @Model.DiaChi
                            }
                        </dd>

                        <dt class="col-sm-3">Vai trò:</dt>
                        <dd class="col-sm-9">
                            @if (ViewBag.UserRoles != null && ViewBag.UserRoles.Count > 0)
                            {
                                foreach (var role in ViewBag.UserRoles)
                                {
                                    <span class="badge badge-primary">@role</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Chưa có vai trò</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>