@model QuanLySuaChua_BaoHanh.Models.Quan

@{
    ViewData["Title"] = "Thêm Quận/Huyện";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Thêm Quận/Huyện Mới</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TenQuan" class="form-label fw-bold">Tên Quận/Huyện</label>
                            <input asp-for="TenQuan" class="form-control" placeholder="Nhập tên quận/huyện" />
                            <span asp-validation-for="TenQuan" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ThanhPhoId" class="form-label fw-bold">Thành Phố</label>
                            <select asp-for="ThanhPhoId" class="form-select" asp-items="ViewBag.ThanhPhoId"></select>
                        </div>
                    </div>
                </div>
                
                <div class="form-group d-flex gap-2 mt-3">
                    <button type="submit" class="btn" style="background-color: var(--blue-primary); color: white;">
                        <i class="bi bi-check-circle me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
