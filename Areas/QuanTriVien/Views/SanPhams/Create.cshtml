@model QuanLySuaChua_BaoHanh.Models.SanPham

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Thêm Sản Phẩm Mới</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SanPhamId" class="form-label fw-bold">Mã sản phẩm</label>
                            <input asp-for="SanPhamId" class="form-control" placeholder="Nhập mã sản phẩm" />
                            <span asp-validation-for="SanPhamId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="KhachHangId" class="form-label fw-bold">Khách Hàng</label>
                            <select asp-for="KhachHangId" class="form-select" asp-items="ViewBag.KhachHangId">
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                            <span asp-validation-for="KhachHangId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="DanhMucId" class="form-label fw-bold">Danh Mục</label>
                            <select asp-for="DanhMucId" class="form-select" asp-items="ViewBag.DanhMucId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="DanhMucId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="MaBh" class="form-label fw-bold">Mã Bảo Hành</label>
                            <input asp-for="MaBh" class="form-control" placeholder="Nhập mã bảo hành" />
                            <span asp-validation-for="MaBh" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="TenSanPham" class="form-label fw-bold">Tên Sản Phẩm</label>
                            <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm" />
                            <span asp-validation-for="TenSanPham" class="text-danger"></span>
                        </div>                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NgayMua" class="form-label fw-bold">Ngày Mua</label>
                            <input asp-for="NgayMua" type="date" class="form-control" id="ngayMua" />
                            <span asp-validation-for="NgayMua" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ThoiGianBaoHanh" class="form-label fw-bold">Thời Gian Bảo Hành (tháng)</label>
                            <input asp-for="ThoiGianBaoHanh" class="form-control" id="baoHanhThang" placeholder="Nhập số tháng bảo hành" />
                            <span asp-validation-for="ThoiGianBaoHanh" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="NgayHetHanBh" class="form-label fw-bold">Ngày Hết Hạn Bảo Hành</label>
                            <input asp-for="NgayHetHanBh" type="date" class="form-control" id="hetHan" readonly />
                            <span asp-validation-for="NgayHetHanBh" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="MoTa" class="form-label fw-bold">Mô Tả</label>
                            <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group d-flex gap-2 mt-4">
                    <button type="submit" class="btn" style="background-color: var(--blue-primary); color: white;">
                        <i class="bi bi-check-circle me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
    (function(){
      // Lấy element theo id
      const ngayMuaInput = document.getElementById('ngayMua');
      const thangInput   = document.getElementById('baoHanhThang');
      const hetHanInput  = document.getElementById('hetHan');
      const form         = hetHanInput.closest('form');

      // Hàm tính ngày hết hạn
      function capNhatHetHan() {
        const mua = ngayMuaInput.value;
        const thang = parseInt(thangInput.value, 10);
        if (!mua || isNaN(thang) || thang <= 0) return;
        const d = new Date(mua);
        d.setMonth(d.getMonth() + thang);
        const yyyy = d.getFullYear();
        const mm   = String(d.getMonth() + 1).padStart(2, '0');
        const dd   = String(d.getDate()).padStart(2, '0');
        hetHanInput.value = `${yyyy}-${mm}-${dd}`;
      }

      // Gắn event listener
      ngayMuaInput.addEventListener('change', capNhatHetHan);
      thangInput.addEventListener('input', capNhatHetHan);

      // Đảm bảo trước khi submit
      form.addEventListener('submit', function(){
        if (!hetHanInput.value) {
          capNhatHetHan();
        }
      });
    })();
    </script>
}