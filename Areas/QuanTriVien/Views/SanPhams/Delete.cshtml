@model QuanLySuaChua_BaoHanh.Models.SanPham

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Xóa Sản Phẩm</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Bạn có chắc chắn muốn xóa sản phẩm này không?
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.MaBh)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge" style="background-color: var(--blue-primary);">@Html.DisplayFor(model => model.MaBh)</span>
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TenSanPham)
                        </dd>                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.DanhMuc)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.KhachHang)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.KhachHang.HoTen)
                        </dd>
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.NgayMua)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NgayMua)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.ThoiGianBaoHanh)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ThoiGianBaoHanh) tháng
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.NgayHetHanBh)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NgayHetHanBh)
                        </dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="SanPhamId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Xác Nhận Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
