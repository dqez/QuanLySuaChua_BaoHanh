@model QuanLySuaChua_BaoHanh.Models.SanPham

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Chi Tiết Sản Phẩm</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.SanPhamId)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Html.DisplayFor(model => model.SanPhamId)</span>
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.MaBh)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge" style="background-color: var(--blue-primary);">@Html.DisplayFor(model => model.MaBh)</span>
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TenSanPham)
                        </dd>                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.DanhMuc)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.KhachHang)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.KhachHang.HoTen)
                        </dd>
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.NgayMua)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NgayMua)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.ThoiGianBaoHanh)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ThoiGianBaoHanh) tháng
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.NgayHetHanBh)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NgayHetHanBh)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.MoTa)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MoTa)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.SanPhamId" class="btn" style="background-color: #ffc107; color: white;">
                    <i class="bi bi-pencil-square me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
