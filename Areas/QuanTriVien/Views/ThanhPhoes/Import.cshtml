@model QuanLySuaChua_BaoHanh.Areas.QuanTriVien.Models.ImportViewModel

@{
    ViewData["Title"] = "Nhập dữ liệu thành phố từ Excel/CSV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nhập dữ liệu thành phố từ Excel/CSV</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Import" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" type="file" accept=".xlsx,.xls,.csv" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="alert alert-info mt-3">
                <h5>Hướng dẫn:</h5>
                <p>File Excel/CSV cần có định dạng như sau:</p>
                <ul>
                    <li>Cột 1: Tên thành phố</li>
                </ul>
                <p>Ví dụ:</p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên thành phố</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Hà Nội</td>
                        </tr>
                        <tr>
                            <td>Hồ Chí Minh</td>
                        </tr>
                        <tr>
                            <td>Đà Nẵng</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Nhập dữ liệu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 