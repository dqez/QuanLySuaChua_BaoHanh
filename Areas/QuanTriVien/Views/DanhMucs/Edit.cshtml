@model QuanLySuaChua_BaoHanh.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Chỉnh Sửa Danh Mục</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="DanhMucId" class="form-label fw-bold">Mã Danh Mục</label>
                    <input asp-for="DanhMucId" class="form-control" readonly="readonly" />
                    <span asp-validation-for="DanhMucId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="TenDanhMuc" class="form-label fw-bold">Tên Danh Mục</label>
                    <input asp-for="TenDanhMuc" class="form-control" />
                    <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="PhanLoai" class="form-label fw-bold">Phân Loại</label>
                    <select asp-for="PhanLoai" class="form-control">
                        <option value="SanPham" selected="@(Model.PhanLoai == "SanPham")">Sản phẩm</option>
                        <option value="LinhKien" selected="@(Model.PhanLoai == "LinhKien")">Linh kiện</option>
                    </select>
                    @* <input asp-for="PhanLoai" class="form-control" /> *@
                    <span asp-validation-for="PhanLoai" class="text-danger"></span>
                </div>
                
                <div class="form-group d-flex gap-2">
                    <button type="submit" class="btn" style="background-color: var(--blue-primary); color: white;">
                        <i class="bi bi-check-circle me-1"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
