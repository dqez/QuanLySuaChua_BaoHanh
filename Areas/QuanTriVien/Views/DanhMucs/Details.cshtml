@model QuanLySuaChua_BaoHanh.Models.DanhMuc

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Chi Tiết Danh Mục</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2 text-md-end">
                    @Html.DisplayNameFor(model => model.DanhMucId)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.DanhMucId)</span>
                </dd>
                <dt class="col-sm-3 col-md-2 text-md-end">
                    @Html.DisplayNameFor(model => model.TenDanhMuc)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    @Html.DisplayFor(model => model.TenDanhMuc)
                </dd>
                <dt class="col-sm-3 col-md-2 text-md-end">
                    @Html.DisplayNameFor(model => model.PhanLoai)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    @Html.DisplayFor(model => model.PhanLoai)
                </dd>
            </dl>

            <div class="d-flex gap-2 mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.DanhMucId" class="btn" style="background-color: #ffc107; color: white;">
                    <i class="bi bi-pencil-square me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
