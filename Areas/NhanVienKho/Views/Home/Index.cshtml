@{  
   ViewData["Title"] = "Trang chủ nhân viên kho";  
   Layout = "_LayoutStashEmployee";  
}  
<style>
    .glass-card {
        background: rgba(255,255,255,0.85);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.15);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        border: 1px solid rgba(255,255,255,0.18);
        padding: 2.5rem 2rem;
    }

    .brand-logos img {
        filter: grayscale(1) brightness(0.8);
        transition: filter 0.3s;
        max-height: 48px;
    }

        .brand-logos img:hover {
            filter: none;
        }

    .feature-list li {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .feature-list i {
        font-size: 1.2rem;
        margin-right: 0.5rem;
    }

    .main-gradient {
        background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container-fluid col-xxl-10">
        <div class="row flex-lg-nowrap align-items-center g-5">
            <div class="col-lg-6 order-lg-2 text-center">
                <img style="clip-path: polygon(25% 0%, 100% 0%, 100% 99%, 0% 100%); border-radius: 1.5rem;"
                     src="https://images.unsplash.com/photo-1618004912476-29818d81ae2e?crop=entropy&amp;cs=tinysrgb&amp;fit=crop&amp;fm=jpg&amp;ixid=MnwzNzg0fDB8MXxzZWFyY2h8NzV8fHB1cnBsZXxlbnwwfDB8fHwxNjQ3NDcxNjY4&amp;ixlib=rb-1.2.1&amp;q=80&amp;w=1080&amp;h=768"
                     class="d-block mx-lg-auto img-fluid shadow-lg"
                     alt="Warehouse" loading="lazy" width="800" height="500">
            </div>
            <div class="col-lg-6 col-xl-5 text-center text-lg-start pt-lg-5 mt-xl-4">
                <div class="glass-card">
                    <div class="mb-4">
                        <h1 class="fw-bold display-4 main-gradient">Quản lý kho linh kiện</h1>
                    </div>
                    <div class="mb-4">
                        <p class="lead mb-0">
                            <span class="fw-semibold text-primary">Chào mừng bạn đến với hệ thống quản lý kho linh kiện.</span><br>
                            Tại đây, bạn có thể dễ dàng quản lý phiếu nhập, phiếu xuất, kiểm tra tồn kho và theo dõi thông tin linh kiện.
                        </p>
                    </div>
                    <div class="mb-4">
                        <p class="fw-bold mb-2">Các chức năng nổi bật:</p>
                        <ul class="feature-list list-unstyled ps-0">
                            <li><i class="bi bi-check-circle-fill text-success"></i> Theo dõi tồn kho linh kiện</li>
                            <li><i class="bi bi-check-circle-fill text-success"></i> Quản lý nhập - xuất linh kiện</li>
                            <li><i class="bi bi-check-circle-fill text-success"></i> Xem báo cáo nhanh</li>
                            <li><i class="bi bi-check-circle-fill text-success"></i> Tìm kiếm và tra cứu linh kiện</li>
                        </ul>
                    </div>
                    <div class="brand-logos row mt-4 justify-content-center g-3">
                        <div class="col-3 d-flex justify-content-center">
                            <img class="img-fluid" src="https://lclibrary.b-cdn.net/starters/wp-content/uploads/sites/15/2021/11/motorola.svg" alt="Motorola">
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            <img class="img-fluid" src="https://lclibrary.b-cdn.net/starters/wp-content/uploads/sites/15/2021/11/asus.svg" alt="Asus">
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            <img class="img-fluid" src="https://lclibrary.b-cdn.net/starters/wp-content/uploads/sites/15/2021/11/sony.svg" alt="Sony">
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            <img class="img-fluid" src="https://lclibrary.b-cdn.net/starters/wp-content/uploads/sites/15/2021/11/samsung-282297.svg" alt="Samsung">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
