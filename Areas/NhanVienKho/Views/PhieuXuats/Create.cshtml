@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Tạo phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i>
                    <h4 class="mb-0">Tạo phiếu xuất mới</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-area="NhanVienKho" asp-controller="PhieuXuats" asp-action="Create">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhieuXuatId" class="form-label">Mã phiếu xuất</label>
                                <input asp-for="PhieuXuatId" class="form-control" />
                                <span asp-validation-for="PhieuXuatId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <div>
                                    <input type="radio" asp-for="TrangThai" value="Done" id="trangthai-done" />
                                    <label for="trangthai-done" class="form-check-label me-3">Đã xong</label>
                                    <input type="radio" asp-for="TrangThai" value="!!!" id="trangthai-todo" />
                                    <label for="trangthai-todo" class="form-check-label">Chưa xong</label>
                                </div>
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="NgayXuat" />
                        <input type="hidden" asp-for="KhoId" />

                        <div class="mb-3">
                            <label class="form-label">Chọn phiếu sửa chữa</label>
                            <select name="phieuSuaChuaIds" class="form-select" multiple style="min-height:120px;">
                                @foreach (var item in ViewBag.PhieuSuaChuaList as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span class="text-danger">@ViewData.ModelState["phieuSuaChuaIds"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Nhập ghi chú (nếu có)"></textarea>
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> Lưu phiếu xuất
                            </button>
                            <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
