@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Tạo phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}
<style>
    .glass-create-card {
        background: rgba(255,255,255,0.97);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.22);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        overflow: hidden;
        min-height: 540px;
    }

        .glass-create-card::before {
            content: "";
            position: absolute;
            top: -60px;
            right: -60px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, #4f8cff55 0%, #6dd5ed22 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

        .glass-create-card::after {
            content: "";
            position: absolute;
            bottom: -40px;
            left: -40px;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle, #6dd5ed33 0%, #4f8cff11 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

    .create-bg-illu {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
        opacity: 0.08;
        background: url('https://cdn.pixabay.com/photo/2017/01/31/13/14/icon-2027661_1280.png') center/cover no-repeat;
    }

    .create-icon {
        font-size: 3.5rem;
        color: #4f8cff;
        background: linear-gradient(135deg, #4f8cff 0%, #6dd5ed 100%);
        border-radius: 1.2rem;
        padding: 0.7rem 1.2rem;
        box-shadow: 0 4px 16px 0 #4f8cff33;
        margin-bottom: 1.2rem;
        z-index: 1;
        position: relative;
        display: inline-block;
    }

    .create-title-gradient {
        background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .create-label {
        color: #4f8cff;
        font-weight: 600;
        letter-spacing: 0.5px;
        font-size: 1.08rem;
    }

    .create-section {
        margin-bottom: 1.5rem;
    }

    .create-actions {
        margin-top: 2.5rem;
    }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 position-relative">
            <div class="glass-create-card shadow position-relative">
                <div class="create-bg-illu"></div>
                <div class="text-center position-relative z-1">
                    <span class="create-icon">
                        <i class="bi bi-plus-circle"></i>
                    </span>
                    <h2 class="mb-2 fw-bold create-title-gradient">Tạo phiếu xuất mới</h2>
                </div>
                <form method="post" asp-area="NhanVienKho" asp-controller="PhieuXuats" asp-action="Create" class="position-relative z-1">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 create-section">
                            <label asp-for="PhieuXuatId" class="form-label create-label">Mã phiếu xuất</label>
                            <input asp-for="PhieuXuatId" class="form-control" />
                            <span asp-validation-for="PhieuXuatId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 create-section">
                            <label class="form-label create-label">Trạng thái</label>
                            <div>
                                <input type="radio" asp-for="TrangThai" value="Done" id="trangthai-done" />
                                <label for="trangthai-done" class="form-check-label me-3">Đã xong</label>
                                <input type="radio" asp-for="TrangThai" value="!!!" id="trangthai-todo" />
                                <label for="trangthai-todo" class="form-check-label">Chưa xong</label>
                            </div>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="NgayXuat" />
                    <input type="hidden" asp-for="KhoId" />

                    <div class="create-section">
                        <label class="form-label create-label">Chọn phiếu sửa chữa</label>
                        <select name="phieuSuaChuaIds" class="form-select" multiple style="min-height:120px;">
                            @foreach (var item in ViewBag.PhieuSuaChuaList as List<SelectListItem>)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span class="text-danger">@ViewData.ModelState["phieuSuaChuaIds"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                    </div>

                    <div class="create-section">
                        <label asp-for="GhiChu" class="form-label create-label">Ghi chú</label>
                        <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Nhập ghi chú (nếu có)"></textarea>
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 create-actions">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save"></i> Lưu phiếu xuất
                        </button>
                        <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
