@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Tạo phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Tạo phiếu xuất mới
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-area="NhanVienKho" asp-controller="PhieuXuats" asp-action="Create">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="PhieuXuatId" class="form-label">Mã phiếu xuất</label>
                            <input asp-for="PhieuXuatId" class="form-control" />
                            <span asp-validation-for="PhieuXuatId" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="NgayXuat" />
                        <input type="hidden" asp-for="KhoId" />
                        <div class="mb-3">
                            <label class="form-label">Chọn phiếu sửa chữa</label>
                            <select name="phieuSuaChuaIds" class="form-select" multiple="multiple" size="6">
                                @if (ViewBag.PhieuSuaChuaList != null)
                                {
                                    foreach (var id in (string[])ViewBag.PhieuSuaChuaList)
                                    {
                                        <option value="@id">@id</option>
                                    }
                                }
                            </select>
                            <span class="text-danger">@ViewData.ModelState["phieuSuaChuaIds"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
