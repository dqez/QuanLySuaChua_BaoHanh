@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Tạo phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Tạo phiếu xuất mới
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="PhieuXuats" asp-action="Create">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="mb-3">
                            <label asp-for="KhoId" class="form-label">Mã kho</label>
                            <select asp-for="KhoId" class="form-select" asp-items="ViewBag.KhoId">
                                <option value="">-- Chọn kho --</option>
                            </select>
                        </div>
                        <input hidden name="PhieuXuatId" value="temp" />
                        <div class="mb-3">
                            <label asp-for="TongTien" class="form-label">Tổng tiền</label>
                            <input asp-for="TongTien" class="form-control" />
                            <span asp-validation-for="TongTien" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                            <input asp-for="TrangThai" class="form-control" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
