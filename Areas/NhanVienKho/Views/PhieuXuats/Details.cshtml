@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Chi tiết phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-info-circle me-2"></i>
                    <h4 class="mb-0">Chi tiết phiếu xuất</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã phiếu xuất:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PhieuXuatId</dd>

                        <dt class="col-sm-4">Mã kho:</dt>
                        <dd class="col-sm-8">@Model.KhoId</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == "Done")
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Đã xong</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Chưa xong</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày xuất:</dt>
                        <dd class="col-sm-8">@Model.NgayXuat.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Tổng tiền:</dt>
                        <dd class="col-sm-8 text-danger fw-bold fs-5">@Model.TongTien?.ToString("N0") ₫</dd>

                        <dt class="col-sm-4">Ghi chú:</dt>
                        <dd class="col-sm-8">@Model.GhiChu</dd>
                    </dl>

                    <hr />
                    <h5 class="mb-3"><i class="bi bi-list-ul"></i> Danh sách chi tiết phiếu xuất</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:30%">Mã phiếu sửa chữa</th>
                                    <th style="width:50%">Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ct in Model.ChiTietPxes)
                                {
                                    <tr>
                                        <td>@ct.PhieuSuaChuaId</td>
                                        <td>@ct.GhiChu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a href="/NhanVienKho/PhieuXuats/Edit/@Model.PhieuXuatId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
