@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Chi tiết phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> THÔNG TIN PHIẾU XUÁT
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã phiếu xuất</dt>
                        <dd class="col-sm-8">@Model.PhieuXuatId</dd>

                        <dt class="col-sm-4">Mã kho</dt>
                        <dd class="col-sm-8">@Model.KhoId</dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">@Model.TrangThai</dd>

                        <dt class="col-sm-4">Ngày xuất</dt>
                        <dd class="col-sm-8">@Model.NgayXuat.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Tổng tiền</dt>
                        <dd class="col-sm-8">@Model.TongTien</dd>

                        <dt class="col-sm-4">Chi tiết phiếu xuất</dt>
                        <dd class="col-sm-8">
                            <ul>
                                @foreach (var ct in Model.ChiTietPxes)
                                {
                                    <li>
                                        Linh kiện: @ct.PhieuSuaChuaId || Ghi chú: @ct.GhiChu
                                    </li>
                                }
                            </ul>
                        </dd>                        

                        <dt class="col-sm-4">Ghi chú</dt>
                        <dd class="col-sm-8">@Model.GhiChu</dd>
                    </dl>
                </div>

                <div class="card-footer text-end">
                    <a asphref="/NhanVienKho/PhieuXuats/Edit" asp-route-id="@Model?.PhieuXuatId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
