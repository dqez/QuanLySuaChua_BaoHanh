@model QuanLySuaChua_BaoHanh.Models.PhieuXuat

@{
    ViewData["Title"] = "Sửa phiếu xuất";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Sửa phiếu xuất
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="NhanVienKho" asp-controller="PhieuXuats" asp-action="Edit" autocomplete="off">
                        <input type="hidden" asp-for="PhieuXuatId" />
                        <input type="hidden" asp-for="KhoId" />
                        <input type="hidden" asp-for="NgayXuat" />
                        <input type="hidden" asp-for="TongTien" />
                                                
                        <div class="mb-3">
                            <label class="form-label">Chọn phiếu sửa chữa</label>
                            <select name="phieuSuaChuaIds" class="form-select" multiple>
                                @foreach (var item in ViewBag.PhieuSuaChuaList as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span class="text-danger">@ViewData.ModelState["phieuSuaChuaIds"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <div>
                                <input type="radio" asp-for="TrangThai" value="Done" id="trangthai-daxong" />
                                <label for="trangthai-daxong" class="form-check-label">!!!</label>
                                &nbsp;&nbsp;
                                <input type="radio" asp-for="TrangThai" value="!!!" id="trangthai-chuaxong" />
                                <label for="trangthai-chuaxong" class="form-check-label">!!!</label>
                            </div>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                            <a href="/NhanVienKho/PhieuXuats/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
