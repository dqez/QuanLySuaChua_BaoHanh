@model QuanLySuaChua_BaoHanh.Models.LinhKien

@{
    ViewData["Title"] = "Chi tiết linh kiện";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}
<style>
    .glass-detail-card {
        background: rgba(255,255,255,0.95);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.22);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        overflow: hidden;
        min-height: 540px;
    }

        .glass-detail-card::before {
            content: "";
            position: absolute;
            top: -60px;
            right: -60px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, #4f8cff55 0%, #6dd5ed22 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

        .glass-detail-card::after {
            content: "";
            position: absolute;
            bottom: -40px;
            left: -40px;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle, #6dd5ed33 0%, #4f8cff11 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

    .detail-bg-illu {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
        opacity: 0.09;
        background: url('https://cdn.pixabay.com/photo/2017/01/31/13/14/icon-2027661_1280.png') center/cover no-repeat;
    }

    .detail-icon {
        font-size: 3.5rem;
        color: #4f8cff;
        background: linear-gradient(135deg, #4f8cff 0%, #6dd5ed 100%);
        border-radius: 1.2rem;
        padding: 0.7rem 1.2rem;
        box-shadow: 0 4px 16px 0 #4f8cff33;
        margin-bottom: 1.2rem;
        z-index: 1;
        position: relative;
        display: inline-block;
    }

    .detail-title-gradient {
        background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .detail-badge {
        font-size: 1.1rem;
        padding: 0.5em 1.2em;
        border-radius: 1.5em;
        font-weight: 600;
        background: linear-gradient(90deg, #6dd5ed 0%, #4f8cff 100%);
        color: #fff;
        box-shadow: 0 2px 8px 0 #4f8cff22;
    }

    .detail-label {
        color: #4f8cff;
        font-weight: 600;
        letter-spacing: 0.5px;
        font-size: 1.08rem;
    }

    .detail-value {
        font-size: 1.15rem;
        font-weight: 500;
        color: #222;
    }

    .detail-section {
        margin-bottom: 1.5rem;
    }

    .detail-value .badge {
        font-size: 1.1rem;
        padding: 0.5em 1.2em;
        border-radius: 1.5em;
    }

    .detail-actions {
        margin-top: 2.5rem;
    }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 position-relative">
            <div class="glass-detail-card shadow position-relative">
                <div class="detail-bg-illu"></div>
                <div class="text-center position-relative z-1">
                    <span class="detail-icon">
                        <i class="bi bi-cpu"></i>
                    </span>
                    <h2 class="mb-2 fw-bold detail-title-gradient">Chi tiết linh kiện</h2>
                    <div class="mb-4">
                        <span class="badge detail-badge fs-6">
                            @Model.TenLinhKien
                        </span>
                    </div>
                </div>
                <div class="row gy-4 position-relative z-1">
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-123"></i> Mã linh kiện</div>
                        <div class="detail-value">@Model.LinhKienId</div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-layers"></i> Danh mục</div>
                        <div class="detail-value">
                            @if (!string.IsNullOrWhiteSpace(Model.DanhMuc?.TenDanhMuc))
                            {
                                @Model.DanhMuc.TenDanhMuc
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-box"></i> Số lượng tồn</div>
                        <div class="detail-value">
                            <span class="badge bg-info text-dark px-3 py-2">@Model.SoLuongTon</span>
                        </div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-cash-coin"></i> Đơn giá</div>
                        <div class="detail-value text-primary fw-bold">@Model.DonGia.ToString("N0") ₫</div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-globe"></i> Phạm vi sử dụng</div>
                        <div class="detail-value">
                            @if (!string.IsNullOrWhiteSpace(Model.PhamViSuDung))
                            {
                                @Model.PhamViSuDung
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-card-text"></i> Ghi chú</div>
                        <div class="detail-value">
                            @if (!string.IsNullOrWhiteSpace(Model.GhiChu))
                            {
                                @Model.GhiChu
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 detail-actions position-relative z-1">
                    <a href="/NhanVienKho/LinhKiens/Edit/@Model.LinhKienId" class="btn btn-warning px-4">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a href="/NhanVienKho/LinhKiens/Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
