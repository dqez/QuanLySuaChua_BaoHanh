@model QuanLySuaChua_BaoHanh.Models.LinhKien

@{
    ViewData["Title"] = "Sửa linh kiện";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark d-flex align-items-center">
                    <i class="bi bi-pencil-square me-2"></i>
                    <h4 class="mb-0">Sửa linh kiện</h4>
                </div>
                <div class="card-body">
                    <form asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Edit">
                        <input type="hidden" asp-for="LinhKienId" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DanhMucId" class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                                <select asp-for="DanhMucId" class="form-select" asp-items="ViewBag.DanhMucId"></select>
                                <span asp-validation-for="DanhMucId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TenLinhKien" class="form-label">Tên linh kiện <span class="text-danger">*</span></label>
                                <input asp-for="TenLinhKien" class="form-control" />
                                <span asp-validation-for="TenLinhKien" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="SoLuongTon" class="form-label">Số lượng tồn <span class="text-danger">*</span></label>
                                <input asp-for="SoLuongTon" class="form-control text-end" min="0" />
                                <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="DonGia" class="form-label">Đơn giá <span class="text-danger">*</span></label>
                                <input asp-for="DonGia" class="form-control text-end" min="0" />
                                <span asp-validation-for="DonGia" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PhamViSuDung" class="form-label">Phạm vi sử dụng</label>
                                <input asp-for="PhamViSuDung" class="form-control" />
                                <span asp-validation-for="PhamViSuDung" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Nhập ghi chú (nếu có)"></textarea>
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <a href="/NhanVienKho/LinhKiens/Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
