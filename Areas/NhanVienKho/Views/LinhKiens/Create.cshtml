@model QuanLySuaChua_BaoHanh.Models.LinhKien

@{
    ViewData["Title"] = "Thêm linh kiện";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Thêm linh kiện mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            @* <label asp-for="DanhMucId" class="form-label">Mã danh mục</label> *@
                            @* <select asp-for="DanhMucId" class="form-select" asp-items="ViewBag.DanhMucId"> *@
                            @*     <option value="">-- Chọn danh mục --</option> *@
                            @* </select> *@
                            <label asp-for="DanhMucId" class="form-label fw-bold">Danh Mục</label>
                            <select asp-for="DanhMucId" class="form-select" asp-items="ViewBag.DanhMucId"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TenLinhKien" class="form-label">Tên linh kiện</label>
                            <input asp-for="TenLinhKien" class="form-control" />
                            <span asp-validation-for="TenLinhKien" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SoLuongTon" class="form-label">Số lượng tồn</label>
                            <input asp-for="SoLuongTon" class="form-control" />
                            <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DonGia" class="form-label">Đơn giá</label>
                            <input asp-for="DonGia" class="form-control" />
                            <span asp-validation-for="DonGia" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhamViSuDung" class="form-label">Phạm vi sử dụng</label>
                            <input asp-for="PhamViSuDung" class="form-control" />
                            <span asp-validation-for="PhamViSuDung" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/NhanVienKho/LinhKiens/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu linh kiện
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
