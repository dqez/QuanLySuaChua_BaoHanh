@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PaginatedList<QuanLySuaChua_BaoHanh.Models.LinhKien>

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<h1>Danh sách linh kiện</h1>

<div class="mb-3">
    @* <a asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Create" class="btn btn-primary">Thêm linh kiện mới</a> *@
    <a href="/NhanVienKho/LinhKiens/Create" class="btn btn-primary">Thêm linh kiện mới</a>
</div>

<form asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="searchString"
               class="form-control"
               placeholder="Tìm kiếm..."
               value="@(ViewData["CurrentFilter"] ?? "")" />
        <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
        <a href="/NhanVienKho/LinhKiens/Index" class="btn btn-outline-secondary">Đặt lại</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Mã linh kiện</th>
                <th>Mã danh mục</th>
                <th>Tên linh kiện</th>
                <th>Số lượng tồn</th>
                <th>Đơn giá</th>
                <th>Phạm vi sử dụng</th>
                <th>Ghi chú</th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var lk in Model)
        {
            <tr>
                <td>@lk.LinhKienId</td>
                <td>@lk.DanhMucId</td>
                <td>@lk.TenLinhKien</td>
                <td>@lk.SoLuongTon</td>
                <td>@lk.DonGia</td>
                <td>@lk.PhamViSuDung</td>
                <td>@lk.GhiChu</td>
                <td>
                        <a href="/NhanVienKho/LinhKiens/Details/@lk.LinhKienId" class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="/NhanVienKho/LinhKiens/Edit/@lk.LinhKienId" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="/NhanVienKho/LinhKiens/Delete/@lk.LinhKienId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">« Trước</a>
            </li>
        }
        else
        {
            <li class="page-item disabled"><span class="page-link">« Trước</span></li>
        }

        <li class="page-item disabled">
            <span class="page-link">
                Trang @Model.PageIndex / @Model.TotalPages
            </span>
        </li>

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">Tiếp »</a>
            </li>
        }
        else
        {
            <li class="page-item disabled"><span class="page-link">Tiếp »</span></li>
        }
    </ul>
</nav>