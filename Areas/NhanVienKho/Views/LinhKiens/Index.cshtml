@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PaginatedList<QuanLySuaChua_BaoHanh.Models.LinhKien>

@{
    ViewData["Title"] = "Danh sách linh kiện";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách linh kiện</h2>
        <a href="/NhanVienKho/LinhKiens/Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm linh kiện mới
        </a>
    </div>

    <form asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="searchString"
                   class="form-control"
                   placeholder="Tìm kiếm linh kiện..."
                   value="@(ViewData["CurrentFilter"] ?? "")" />
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
            <a href="/NhanVienKho/LinhKiens/Index" class="btn btn-outline-secondary">Đặt lại</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã linh kiện</th>
                            <th>Mã danh mục</th>
                            <th>Tên linh kiện</th>
                            <th>Số lượng tồn</th>
                            <th>Đơn giá</th>
                            <th>Phạm vi sử dụng</th>
                            <th>Ghi chú</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Không có linh kiện nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var lk in Model)
                            {
                                <tr>
                                    <td>@lk.LinhKienId</td>
                                    <td>@lk.DanhMucId</td>
                                    <td>@lk.TenLinhKien</td>
                                    <td>@lk.SoLuongTon</td>
                                    <td>@lk.DonGia</td>
                                    <td>@lk.PhamViSuDung</td>
                                    <td>@lk.GhiChu</td>
                                    <td>
                                        <a href="/NhanVienKho/LinhKiens/Details/@lk.LinhKienId" class="btn btn-info btn-sm">Chi tiết</a>
                                        <a href="/NhanVienKho/LinhKiens/Edit/@lk.LinhKienId" class="btn btn-primary btn-sm">Sửa</a>
                                        <a href="/NhanVienKho/LinhKiens/Delete/@lk.LinhKienId" class="btn btn-danger btn-sm">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">« Trước</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">« Trước</span></li>
            }

            <li class="page-item disabled">
                <span class="page-link">
                    Trang @Model.PageIndex / @Model.TotalPages
                </span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="NhanVienKho" asp-controller="LinhKiens" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">Tiếp »</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Tiếp »</span></li>
            }
        </ul>
    </nav>
</div>



