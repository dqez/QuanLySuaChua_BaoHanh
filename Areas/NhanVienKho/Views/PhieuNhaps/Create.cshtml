@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PhieuNhapCreateViewModel

@{
    ViewData["Title"] = "Tạo phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Tạo phiếu nhập mới
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="PhieuNhap.PhieuNhapId" class="form-label">Mã phiếu nhập</label>
                            <input asp-for="PhieuNhap.PhieuNhapId" class="form-control" />
                            <span asp-validation-for="PhieuNhap.PhieuNhapId" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="PhieuNhap.KhoId" />
                        <input type="hidden" asp-for="PhieuNhap.NgayNhap" />

                        <div class="mb-3">
                            <label asp-for="PhieuNhap.TrangThai" class="form-label">Trạng thái</label>
                            <div>
                                <input type="radio" asp-for="PhieuNhap.TrangThai" value="Done" id="trangthai-done" />
                                <label for="trangthai-done" class="form-check-label">Done</label>
                                &nbsp;&nbsp;
                                <input type="radio" asp-for="PhieuNhap.TrangThai" value="!!!" id="trangthai-todo" />
                                <label for="trangthai-todo" class="form-check-label">!!!</label>
                            </div>
                            <span asp-validation-for="PhieuNhap.TrangThai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhieuNhap.GhiChu" class="form-label">Ghi chú</label>
                            <textarea asp-for="PhieuNhap.GhiChu" class="form-control"></textarea>
                            <span asp-validation-for="PhieuNhap.GhiChu" class="text-danger"></span>
                        </div>

                        <hr />
                        <h5>Danh sách linh kiện</h5>
                        <table class="table table-bordered mt-3">
                            <thead class="table-light">
                                <tr>
                                    <th>Tên linh kiện</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.LinhKienInputs.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Model.LinhKienInputs[i].TenLinhKien
                                            <input type="hidden" asp-for="LinhKienInputs[@i].LinhKienId" />
                                            <input type="hidden" asp-for="LinhKienInputs[@i].TenLinhKien" />
                                            <input type="hidden" asp-for="LinhKienInputs[@i].DonGia" />
                                        </td>
                                        <td>@Model.LinhKienInputs[i].DonGia</td>
                                        <td>
                                            <input type="number" class="form-control" asp-for="LinhKienInputs[@i].SoLuong" min="0" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
