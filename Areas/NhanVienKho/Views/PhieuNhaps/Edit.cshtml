@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PhieuNhapCreateViewModel

@{
    ViewData["Title"] = "Sửa phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}
<style>
    .glass-edit-card {
        background: rgba(255,255,255,0.97);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.22);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        overflow: hidden;
        min-height: 540px;
    }

        .glass-edit-card::before {
            content: "";
            position: absolute;
            top: -60px;
            right: -60px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, #4f8cff55 0%, #6dd5ed22 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

        .glass-edit-card::after {
            content: "";
            position: absolute;
            bottom: -40px;
            left: -40px;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle, #6dd5ed33 0%, #4f8cff11 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

    .edit-bg-illu {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
        opacity: 0.08;
        background: url('https://cdn.pixabay.com/photo/2017/01/31/13/14/icon-2027661_1280.png') center/cover no-repeat;
    }

    .edit-icon {
        font-size: 3.5rem;
        color: #4f8cff;
        background: linear-gradient(135deg, #4f8cff 0%, #6dd5ed 100%);
        border-radius: 1.2rem;
        padding: 0.7rem 1.2rem;
        box-shadow: 0 4px 16px 0 #4f8cff33;
        margin-bottom: 1.2rem;
        z-index: 1;
        position: relative;
        display: inline-block;
    }

    .edit-title-gradient {
        background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .edit-label {
        color: #4f8cff;
        font-weight: 600;
        letter-spacing: 0.5px;
        font-size: 1.08rem;
    }

    .edit-section {
        margin-bottom: 1.5rem;
    }

    .edit-actions {
        margin-top: 2.5rem;
    }

    .edit-radio-label {
        font-weight: 500;
        margin-right: 1.5rem;
        color: #4f8cff;
    }

    .edit-radio input[type="radio"] {
        accent-color: #4f8cff;
    }

    .table-glass {
        background: rgba(255,255,255,0.92);
        border-radius: 1.2rem;
        overflow: hidden;
        box-shadow: 0 2px 12px 0 #4f8cff11;
    }

        .table-glass th {
            background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
            color: #fff;
            font-weight: 600;
            border: none;
        }

        .table-glass td, .table-glass th {
            vertical-align: middle !important;
        }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-10 position-relative">
            <div class="glass-edit-card shadow position-relative">
                <div class="edit-bg-illu"></div>
                <div class="text-center position-relative z-1">
                    <span class="edit-icon">
                        <i class="bi bi-pencil-square"></i>
                    </span>
                    <h2 class="mb-2 fw-bold edit-title-gradient">Sửa phiếu nhập</h2>
                    <div class="mb-4">
                        <span class="badge bg-primary fs-6 px-3 py-2">
                            Mã phiếu: @Model.PhieuNhap.PhieuNhapId
                        </span>
                    </div>
                </div>
                <form method="post" asp-area="NhanVienKho" asp-controller="PhieuNhaps" asp-action="Edit" class="position-relative z-1">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PhieuNhap.PhieuNhapId" />
                    <input type="hidden" asp-for="PhieuNhap.KhoId" />
                    <input type="hidden" asp-for="PhieuNhap.NgayNhap" />

                    <div class="row">
                        <div class="col-md-6 edit-section">
                            <label asp-for="PhieuNhap.PhieuNhapId" class="form-label edit-label">Mã phiếu nhập</label>
                            <input asp-for="PhieuNhap.PhieuNhapId" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 edit-section">
                            <label asp-for="PhieuNhap.TrangThai" class="form-label edit-label">Trạng thái</label>
                            <div class="edit-radio">
                                <input type="radio" asp-for="PhieuNhap.TrangThai" value="Done" id="trangthai-done" />
                                <label for="trangthai-done" class="form-check-label edit-radio-label">Đã xong</label>
                                <input type="radio" asp-for="PhieuNhap.TrangThai" value="!!!" id="trangthai-todo" />
                                <label for="trangthai-todo" class="form-check-label edit-radio-label">Chưa xong</label>
                            </div>
                            <span asp-validation-for="PhieuNhap.TrangThai" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="edit-section">
                        <label asp-for="PhieuNhap.GhiChu" class="form-label edit-label">Ghi chú</label>
                        <textarea asp-for="PhieuNhap.GhiChu" class="form-control" rows="2" placeholder="Nhập ghi chú (nếu có)"></textarea>
                        <span asp-validation-for="PhieuNhap.GhiChu" class="text-danger"></span>
                    </div>

                    <hr />
                    <h5 class="mb-3"><i class="bi bi-list-ul"></i> Chỉnh sửa linh kiện và số lượng</h5>
                    <div class="table-glass mb-4">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th style="width:45%">Tên linh kiện</th>
                                        <th style="width:20%" class="text-end">Đơn giá</th>
                                        <th style="width:20%" class="text-center">Số lượng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.LinhKienInputs.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                @Model.LinhKienInputs[i].TenLinhKien
                                                <input type="hidden" asp-for="LinhKienInputs[@i].LinhKienId" />
                                                <input type="hidden" asp-for="LinhKienInputs[@i].TenLinhKien" />
                                                <input type="hidden" asp-for="LinhKienInputs[@i].DonGia" />
                                            </td>
                                            <td class="text-end">@Model.LinhKienInputs[i].DonGia ₫</td>
                                            <td class="text-center">
                                                <input type="number" class="form-control form-control-sm d-inline-block" style="width:90px"
                                                       asp-for="LinhKienInputs[@i].SoLuong" min="0" max="1000" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 edit-actions">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save"></i> Lưu thay đổi
                        </button>
                        <a href="/NhanVienKho/PhieuNhaps/Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
