@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PaginatedList<QuanLySuaChua_BaoHanh.Models.PhieuNhap>

@{
    ViewData["Title"] = "Danh sách phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách phiếu nhập</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm phiếu nhập mới
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="searchString"
                   class="form-control"
                   placeholder="Tìm kiếm phiếu nhập..."
                   value="@(ViewData["CurrentFilter"] ?? "")" />
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Đặt lại</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ngày nhập</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú</th>
                            <th>Mã kho</th>
                            <th class="text-center">Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Không có phiếu nhập nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NgayNhap.ToString("dd/MM/yyyy")</td>
                                    <td>@item.TongTien</td>
                                    <td>
                                        <span class="badge @(item.TrangThai == "Đã duyệt" ? "bg-success" : "bg-warning text-dark")">
                                            @item.TrangThai
                                        </span>
                                    </td>
                                    <td>@item.GhiChu</td>
                                    <td>@item.Kho?.Id</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.PhieuNhapId" class="btn btn-primary btn-sm me-1">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@lk.LinhKienId" class="btn btn-danger btn-sm">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">« Trước</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">« Trước</span></li>
            }

            <li class="page-item disabled">
                <span class="page-link">
                    Trang @Model.PageIndex / @Model.TotalPages
                </span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">Tiếp »</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Tiếp »</span></li>
            }
        </ul>
    </nav>
</div>
