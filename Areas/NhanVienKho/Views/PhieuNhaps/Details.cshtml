@model QuanLySuaChua_BaoHanh.Models.PhieuNhap

@{
    ViewData["Title"] = "Chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <h3>Thông tin phiếu nhập</h3>
    <dl class="row">
        <dt class="col-sm-3">Mã phiếu nhập</dt>
        <dd class="col-sm-9">@Model.PhieuNhapId</dd>

        <dt class="col-sm-3">Ngày nhập</dt>
        <dd class="col-sm-9">@Model.NgayNhap.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>

        <dt class="col-sm-3">Ghi chú</dt>
        <dd class="col-sm-9">@Model.GhiChu</dd>

        <dt class="col-sm-3">Tổng tiền</dt>
        <dd class="col-sm-9">@Model.TongTien</dd>
    </dl>

    <h4>Danh sách linh kiện</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên linh kiện</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ct in Model.ChiTietPns)
            {
                <tr>
                    <td>@ct.LinhKien?.TenLinhKien</td>
                    <td>@ct.SoLuong</td>
                    <td>@ct.LinhKien?.DonGia.ToString("N0")</td>
                    <td>@(ct.SoLuong * ct.LinhKien?.DonGia ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
