@model QuanLySuaChua_BaoHanh.Models.PhieuNhap

@{
    ViewData["Title"] = "Chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-receipt-cutoff me-2"></i>
                    <h4 class="mb-0">Chi tiết phiếu nhập</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-hash"></i> Mã phiếu nhập</dt>
                        <dd class="col-sm-8 fw-bold">@Model.PhieuNhapId</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-date"></i> Ngày nhập</dt>
                        <dd class="col-sm-8">@Model.NgayNhap.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4"><i class="bi bi-info-circle"></i> Trạng thái</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == "Done")
                            {
                                <span class="badge bg-success">Đã xong</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Chưa xong</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-card-text"></i> Ghi chú</dt>
                        <dd class="col-sm-8">@Model.GhiChu</dd>

                        <dt class="col-sm-4"><i class="bi bi-cash-stack"></i> Tổng tiền</dt>
                        <dd class="col-sm-8 text-danger fw-bold fs-5">
                            @Model.TongTien?.ToString("N0") ₫
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-list-ul"></i> Danh sách linh kiện
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:40%">Tên linh kiện</th>
                                <th style="width:15%">Số lượng</th>
                                <th style="width:20%">Đơn giá</th>
                                <th style="width:25%">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.ChiTietPns)
                            {
                                <tr>
                                    <td>@ct.LinhKien?.TenLinhKien</td>
                                    <td>@ct.SoLuong</td>
                                    <td>@ct.LinhKien?.DonGia.ToString("N0") ₫</td>
                                    <td class="text-end text-primary fw-semibold">
                                        @((ct.SoLuong * (ct.LinhKien?.DonGia ?? 0)).ToString("N0")) ₫
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                <td class="text-end text-danger fw-bold fs-5">
                                    @Model.TongTien?.ToString("N0") ₫
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
