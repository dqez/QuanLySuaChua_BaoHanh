@model QuanLySuaChua_BaoHanh.Models.PhieuNhap

@{
    ViewData["Title"] = "Chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}
<style>
    .glass-detail-card {
        background: rgba(255,255,255,0.95);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.22);
        padding: 2.5rem 2rem 2rem 2rem;
        position: relative;
        overflow: hidden;
        min-height: 540px;
    }

        .glass-detail-card::before {
            content: "";
            position: absolute;
            top: -60px;
            right: -60px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, #4f8cff55 0%, #6dd5ed22 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

        .glass-detail-card::after {
            content: "";
            position: absolute;
            bottom: -40px;
            left: -40px;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle, #6dd5ed33 0%, #4f8cff11 100%);
            z-index: 0;
            border-radius: 50%;
            filter: blur(2px);
        }

    .detail-bg-illu {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
        opacity: 0.09;
        background: url('https://cdn.pixabay.com/photo/2017/01/31/13/14/icon-2027661_1280.png') center/cover no-repeat;
    }

    .detail-icon {
        font-size: 3.5rem;
        color: #4f8cff;
        background: linear-gradient(135deg, #4f8cff 0%, #6dd5ed 100%);
        border-radius: 1.2rem;
        padding: 0.7rem 1.2rem;
        box-shadow: 0 4px 16px 0 #4f8cff33;
        margin-bottom: 1.2rem;
        z-index: 1;
        position: relative;
        display: inline-block;
    }

    .detail-title-gradient {
        background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .detail-badge {
        font-size: 1.1rem;
        padding: 0.5em 1.2em;
        border-radius: 1.5em;
        font-weight: 600;
        background: linear-gradient(90deg, #6dd5ed 0%, #4f8cff 100%);
        color: #fff;
        box-shadow: 0 2px 8px 0 #4f8cff22;
    }

    .detail-label {
        color: #4f8cff;
        font-weight: 600;
        letter-spacing: 0.5px;
        font-size: 1.08rem;
    }

    .detail-value {
        font-size: 1.15rem;
        font-weight: 500;
        color: #222;
    }

    .detail-section {
        margin-bottom: 1.5rem;
    }

    .detail-value .badge {
        font-size: 1.1rem;
        padding: 0.5em 1.2em;
        border-radius: 1.5em;
    }

    .detail-actions {
        margin-top: 2.5rem;
    }

    .table-glass {
        background: rgba(255,255,255,0.92);
        border-radius: 1.2rem;
        overflow: hidden;
        box-shadow: 0 2px 12px 0 #4f8cff11;
    }

        .table-glass th {
            background: linear-gradient(90deg, #4f8cff 0%, #6dd5ed 100%);
            color: #fff;
            font-weight: 600;
            border: none;
        }

        .table-glass td, .table-glass th {
            vertical-align: middle !important;
        }

        .table-glass tfoot td {
            background: #f8fafc;
            font-size: 1.1rem;
        }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 position-relative">
            <div class="glass-detail-card shadow position-relative mb-4">
                <div class="detail-bg-illu"></div>
                <div class="text-center position-relative z-1">
                    <span class="detail-icon">
                        <i class="bi bi-receipt-cutoff"></i>
                    </span>
                    <h2 class="mb-2 fw-bold detail-title-gradient">Chi tiết phiếu nhập</h2>
                    <div class="mb-4">
                        <span class="badge detail-badge fs-6">
                            Mã: @Model.PhieuNhapId
                        </span>
                    </div>
                </div>
                <div class="row gy-4 position-relative z-1">
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-calendar-date"></i> Ngày nhập</div>
                        <div class="detail-value">@Model.NgayNhap.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-info-circle"></i> Trạng thái</div>
                        <div class="detail-value">
                            @if (Model.TrangThai == "Done")
                            {
                                <span class="badge bg-success">Đã xong</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Chưa xong</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-card-text"></i> Ghi chú</div>
                        <div class="detail-value">@(!string.IsNullOrWhiteSpace(Model.GhiChu) ? Model.GhiChu : "<span class='text-muted'>Không có</span>")</div>
                    </div>
                    <div class="col-md-6 detail-section">
                        <div class="detail-label mb-1"><i class="bi bi-cash-stack"></i> Tổng tiền</div>
                        <div class="detail-value text-danger fw-bold fs-5">
                            @Model.TongTien?.ToString("N0") ₫
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-glass mb-4">
                <div class="card-header bg-secondary text-white d-flex align-items-center">
                    <i class="bi bi-list-ul me-2"></i> <span>Danh sách linh kiện</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width:40%">Tên linh kiện</th>
                                <th style="width:15%">Số lượng</th>
                                <th style="width:20%">Đơn giá</th>
                                <th style="width:25%">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.ChiTietPns)
                            {
                                <tr>
                                    <td>@ct.LinhKien?.TenLinhKien</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@ct.SoLuong</span>
                                    </td>
                                    <td>@ct.LinhKien?.DonGia.ToString("N0") ₫</td>
                                    <td class="text-end text-primary fw-semibold">
                                        @((ct.SoLuong * (ct.LinhKien?.DonGia ?? 0)).ToString("N0")) ₫
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                <td class="text-end text-danger fw-bold fs-5">
                                    @Model.TongTien?.ToString("N0") ₫
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
