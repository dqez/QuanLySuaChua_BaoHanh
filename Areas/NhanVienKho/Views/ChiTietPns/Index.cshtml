@model QuanLySuaChua_BaoHanh.Areas.NhanVienKho.Models.PaginatedList<QuanLySuaChua_BaoHanh.Models.ChiTietPn>

@{
    ViewData["Title"] = "Danh sách chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách chi tiết phiếu nhập</h2>
    </div>

    <form asp-area="NhanVienKho" asp-controller="ChiTietPns" asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="searchString"
                   class="form-control"
                   placeholder="Tìm kiếm chi tiết phiếu nhập..."
                   value="@(ViewData["CurrentFilter"] ?? "")" />
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
            <a href="/NhanVienKho/ChiTietPns/Index" class="btn btn-outline-secondary">Đặt lại</a>
            <a href="/NhanVienKho/PhieuNhaps/Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã phiếu nhập</th>
                            <th>Mã linh kiện</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Không có chi tiết  phiếu nhập nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PhieuNhapId</td>
                                    <td>@item.LinhKienId</td>
                                    <td>@item.SoLuong</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="/NhanVienKho/ChiTietPns/Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">« Trước</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">« Trước</span></li>
            }

            <li class="page-item disabled">
                <span class="page-link">
                    Trang @Model.PageIndex / @Model.TotalPages
                </span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="/NhanVienKho/ChiTietPns/Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@(ViewData["CurrentFilter"])">Tiếp »</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Tiếp »</span></li>
            }
        </ul>
    </nav>
</div>
