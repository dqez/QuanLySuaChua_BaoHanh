@model QuanLySuaChua_BaoHanh.Models.ChiTietPn

@{
    ViewData["Title"] = "Sửa chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Sửa chi tiết phiếu nhập
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="NhanVienKho" asp-controller="ChiTietPns" asp-action="Edit" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="PhieuNhapId" />
                        <input type="hidden" asp-for="LinhKienId" />
                        <div class="mb-3">
                            <label asp-for="SoLuong" class="form-label"></label>
                            <input asp-for="SoLuong" class="form-control" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                            <a href="/NhanVienKho/ChiTietPns/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
