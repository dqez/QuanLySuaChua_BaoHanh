@model QuanLySuaChua_BaoHanh.Models.ChiTietPn

@{
    ViewData["Title"] = "Thêm chi tiết phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Thêm chi tiết phiếu nhập mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="PhieuNhapId" class="form-label fw-bold">Mã phiếu nhập </label>
                            <select asp-for="PhieuNhapId" class="form-select" asp-items="ViewBag.PhieuNhapId"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LinhKienId" class="form-label fw-bold">Mã linh kiện</label>
                            <select asp-for="LinhKienId" class="form-select" asp-items="ViewBag.LinhKienId"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SoLuong" class="form-label">Số lượng</label>
                            <input asp-for="SoLuong" class="form-control" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                            <div class="d-flex justify-content-between">
                            <a href="/NhanVienKho/ChiTietPns/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu linh kiện
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
