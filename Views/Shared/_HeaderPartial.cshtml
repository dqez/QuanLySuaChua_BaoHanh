<header class="header d-flex justify-content-between align-items-center">
    @{
        var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
        var homeController = "Home";
        var homeAction = "Index";
        
        // Nếu đang ở area Admin, điều hướng về Admin/Home/Index
        // Nếu không có area hoặc area khác, điều hướng về Home/Index
        if (!string.IsNullOrEmpty(currentArea))
        {
            // Giữ nguyên area hiện tại và điều hướng về Home/Index của area đó
        }
        else
        {
            currentArea = ""; // Về trang chủ chính (không có area)
        }
    }
    <a asp-area="" asp-controller="Account" asp-action="Login" class="logo-container text-decoration-none">
        <h1 class="logo-text">Panasonic</h1>
        <p class="logo-subtext">Trung tâm bảo hành</p>
    </a>

    <div class="header-icons d-flex align-items-center">
        <i class="bi bi-globe me-3"></i>
        <i class="bi bi-geo-alt me-3"></i>
        <i class="bi bi-facebook me-3"></i>

        @{
            bool isAuthenticated = User.Identity?.IsAuthenticated ?? false;
        }

        @if (isAuthenticated && User.Identity != null)
        {
            <div class="dropdown">
                <button class="btn text-decoration-none dropdown-toggle d-flex align-items-center px-3 py-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 25px; border: 2px solid #319bc5; background-color: transparent; color: #319bc5; transition: all 0.3s;" onmouseover="this.style.backgroundColor='#319bc5'; this.style.color='white'; this.querySelector('i').style.color='white';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#319bc5'; this.querySelector('i').style.color='#319bc5';">
                    <i class="bi bi-person-circle me-2" style="font-size: 1.2em; color: #319bc5; transition: color 0.3s;"></i>
                    <span style="color: inherit; font-weight: 500;">@User.Identity.Name</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown" style="border-radius: 10px;">
                    <li>
                        <a class="dropdown-item d-flex align-items-center py-2" asp-area="" asp-controller="Account" asp-action="Profile" style="color: #319bc5; transition: all 0.3s;" onmouseover="this.style.backgroundColor='#319bc5'; this.style.color='white'; this.querySelector('i').style.color='white';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#319bc5'; this.querySelector('i').style.color='#319bc5';">
                            <i class="bi bi-person me-2" style="color: #319bc5; font-size: 1.1em; transition: color 0.3s;"></i>
                            <span>Thông tin cá nhân</span>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item d-flex align-items-center py-2 w-100 border-0" style="background-color: transparent !important; color: #319bc5 !important; transition: all 0.3s;" onmouseover="this.style.setProperty('background-color', '#319bc5', 'important'); this.style.setProperty('color', 'white', 'important'); this.querySelector('i').style.setProperty('color', 'white', 'important');" onmouseout="this.style.setProperty('background-color', 'transparent', 'important'); this.style.setProperty('color', '#319bc5', 'important'); this.querySelector('i').style.setProperty('color', '#319bc5', 'important');">
                                <i class="bi bi-box-arrow-right me-2" style="font-size: 1.1em; color: #319bc5; transition: color 0.3s;"></i>
                                <span>Đăng xuất</span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn text-decoration-none d-flex align-items-center px-3 py-2" style="border-radius: 25px; border: 2px solid #319bc5; background-color: transparent; color: #319bc5; transition: all 0.3s;" onmouseover="this.style.backgroundColor='#319bc5'; this.style.color='white'; this.querySelector('i').style.color='white';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#319bc5'; this.querySelector('i').style.color='#319bc5';">
                <i class="bi bi-person-circle me-2" style="font-size: 1.2em; color: #319bc5; transition: color 0.3s;"></i>
                <span style="font-weight: 500;">Đăng nhập</span>
            </a>
        }
    </div>
</header>